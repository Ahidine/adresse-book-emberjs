
<div class="card" style="width: 18rem;">
	<img class="card-img-top" src="{{@group.image}}" alt="Card image cap">
	<div class="card-body">
		<p class="card-text">Sous groupe : {{@group.title}} </p>
	</div>
	{{#if this.shouldConfirm}}
	<button {{ on "click" this.ButtonPressed }} class="btn btn-danger"> Supprimer</button>
	{{else}}
	<div class="row">
		<div class="col-md-6">
			<button {{ on "click" this.SuppPressed }} class="btn btn-danger"> Confirmer !</button>
		</div>
		<div class="col-md-6">
			<button {{ on "click" this.CancelPressed }} class="btn btn-danger"> Annuler</button>
		</div>
	</div>
	
	{{/if}}

</div>